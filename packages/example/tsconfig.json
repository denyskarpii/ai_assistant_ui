{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../assistant-ui/src/primitives/ChatPrimitive.tsx",
    "../assistant-ui/src/primitives/MessagePrimitive.tsx",
    "app/page.tsx",
    "../assistant-ui/src/primitives/MessageActionPrimitive.tsx",
    "../assistant-ui/src/utils/Context.tsx",
    "../assistant-ui/src/primitives/ChatList.tsx",
    "../assistant-ui/src/primitives/MessageActionBarPrimitive.tsx",
    "../assistant-ui/src/primitives/MessageValues.tsx"
  ],
  "exclude": ["node_modules"]
}
